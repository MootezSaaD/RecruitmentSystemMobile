<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tn.medtech.recruitmentsystemapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.ApplicantDashboard.ApplicantAddWorkExperience"></activity>
        <activity android:name=".ui.ApplicantDashboard.ApplicantJobDetailActivity" />
        <activity android:name=".ui.RecruiterDashboard.RecruiterJobOfferDetailsActivity" />
        <activity
            android:name=".ui.ApplicantDashboard.ApplicantDashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Remove Action bar for the RecruiterDashBoardActivity -->
        <activity
            android:name=".ui.RecruiterDashboard.RecruiterDashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.RecruiterDashboard.CreateJobFragment" />
        <activity android:name=".ui.Authentication.Register.ApplicantRegisterActivity" />
        <activity android:name=".ui.Authentication.Register.RecruiterRegisterActivity" />
        <activity android:name=".ui.Authentication.Register.GeneralRegisterActivity" />
        <activity android:name=".ui.Authentication.Register.RegisterActivity" />
        <activity android:name=".ui.Authentication.Login.LoginActivity" />
        <activity android:name=".ui.Authentication.Login.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>